{
	"name": "vscotion",
	"displayName": "vscotion",
	"description": " Vscotion is a Visual studio code extension to make a code snippet from the currently open file in vscode to your Notion account. ",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.70.2"
	},
	"categories": [
		"Snippets",
		"Notebooks",
		"Other"
	],
	"activationEvents": [
		"onCommand:vscotion.addIntegrationKey",
		"onCommand:vscotion.showCurrentIntegrationKey",
		"onCommand:vscotion.setNotionPage",
		"onCommand:vscotion.scanDocument",
		"onCommand:vscotion.saveToNotion"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "vscotion",
			"properties": {
				"vscotion.IntegrationKey": {
					"type": "string",
					"default": "",
					"description": "Please set your Notion Integration Key",
					"link": "https://www.notion.so/my-integrations/",
					"scope": "window"
				}
			}
		},
		"commands": [
			{
				"command": "vscotion.addIntegrationKey",
				"title": "VSCotion: Add Notion Integration Key",
				"icon": "$(key)"
			},
			{
				"command": "vscotion.showCurrentIntegrationKey",
				"title": "VSCotion: Show current Notion Integration Key",
				"icon": "$(eye)"
			},
			{
				"command": "vscotion.saveToNotion",
				"title": "VSCotion: Save snippet to notion",
				"icon": "${eye}"
			},
			{
				"command": "vscotion.setNotionPage",
				"title": "VSCotion: Select target page",
				"icon": "$(eye)"
			},
			{
				"command": "vscotion.scanDocument",
				"title": "VSCotion: Scan Document",
				"icon": "$(eye)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "18.x",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.23.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"typescript": "^4.8.0",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"@notionhq/client": "^2.1.1",
		"api": "^4.5.2"
	}
}
